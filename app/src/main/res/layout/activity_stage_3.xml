<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insidestage1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wooden_background"
    android:orientation="vertical"
    tools:context="com.example.abdullah_mansour.mathpuzzle.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/image" />

            <TextView
                style="@style/item_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/stage3" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/idea_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/idea3" />

        <TextView
            android:id="@+id/hinttext"
            style="@style/submit_style"
            android:layout_width="210dp"
            android:layout_height="35dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@+id/idea_btn"
            android:layout_toStartOf="@+id/idea_btn"
            android:background="@drawable/image"
            android:gravity="center"
            android:text=" multiplied numbers "
            android:visibility="invisible" />


        <TextView
            android:id="@+id/textView"
            style="@style/item_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="68dp"
            android:layout_marginStart="68dp"
            android:gravity="center"
            android:text="if ," />

        <TextView
            android:id="@+id/textView2"
            style="@style/item_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idea_btn"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:text="2 , 2 = 4" />

        <TextView
            android:id="@+id/textView3"
            style="@style/item_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:text="3 , 3 = 9" />

        <TextView
            android:id="@+id/textView4"
            style="@style/item_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:text="4 , 4 = 16" />

        <TextView
            android:id="@+id/textView5"
            style="@style/item_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView4"
            android:text="then ," />

        <TextView
            style="@style/item_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView5"
            android:text="5 , 5 = ?" />

    </RelativeLayout>

    //

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/numbers"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/numberstext"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@drawable/image" />

            <Button
                android:id="@+id/deletetext"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:clickable="true"
                android:gravity="center"
                android:text="x" />

            <Button
                android:id="@+id/submit_btn"
                style="@style/submit_style"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:background="@drawable/image"
                android:clickable="true"
                android:gravity="center"
                android:text="SUBMIT" />

        </LinearLayout>

        //

        <LinearLayout
            android:id="@+id/numbers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/numbers2"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/number0"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="0" />

            <Button
                android:id="@+id/number1"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="1" />

            <Button
                android:id="@+id/number2"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="2" />

            <Button
                android:id="@+id/number3"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="3" />

            <Button
                android:id="@+id/number4"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="4" />

            <Button
                android:id="@+id/number5"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="5" />

            <Button
                android:id="@+id/number6"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="6" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbers2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number7"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="7" />

            <Button
                android:id="@+id/number8"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="8" />

            <Button
                android:id="@+id/number9"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="9" />

            <Button
                android:id="@+id/minus"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="-" />

            <Button
                android:id="@+id/dot"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="." />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

