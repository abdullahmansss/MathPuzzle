<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insidestage1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_1wooden_background"
    android:orientation="vertical"
    tools:context="com.example.abdullah_mansour.mathpuzzle.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/coinimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:src="@drawable/coins" />

        <TextView
            android:id="@+id/coins"
            style="@style/item_style"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/coinimg"
            android:gravity="center_vertical"
            android:text="5" />


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/image" />

            <TextView
                style="@style/item_style"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/stage11" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/idea_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/idea3" />

        <TextView
            android:id="@+id/hinttext"
            style="@style/hint_style"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@+id/idea_btn"
            android:layout_toStartOf="@+id/idea_btn"
            android:background="@drawable/image"
            android:gravity="center"
            android:text=" add numbers "
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/item_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="1 , 4 , 4 , 6" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin1"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/item_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="5 , 3 , 10 , 1 = -30" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin2"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center">

            <TextView
                style="@style/item_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="2 , 3 , 7 , 9 = 10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center">

            <TextView
                style="@style/item_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="5 , 5 , 18 , 15 = ?" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/numbers"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/numberstext"
                style="@style/item_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:background="@drawable/image"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/deletetext"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:clickable="true"
                android:gravity="center"
                android:text="x" />

            <Button
                android:id="@+id/submit_btn"
                style="@style/submit_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/image"
                android:clickable="true"
                android:gravity="center"
                android:text="SUBMIT" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/numbers2"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/number0"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="0" />

            <Button
                android:id="@+id/number1"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="1" />

            <Button
                android:id="@+id/number2"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="2" />

            <Button
                android:id="@+id/number3"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="3" />

            <Button
                android:id="@+id/number4"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="4" />

            <Button
                android:id="@+id/number5"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="5" />

            <Button
                android:id="@+id/number6"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="6" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbers2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number7"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="7" />

            <Button
                android:id="@+id/number8"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="8" />

            <Button
                android:id="@+id/number9"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="9" />

            <Button
                android:id="@+id/minus"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="-" />

            <Button
                android:id="@+id/dot"
                style="@style/style2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/image"
                android:gravity="center"
                android:text="." />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

