<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdullah_mansour.mathpuzzle.MainActivity"
    android:background="@drawable/rsz_1wooden_background"
    android:orientation="vertical"
    android:id="@+id/mainmenulayout"
    >

    <TextView
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:fontFamily="casual"
        android:text="@string/app_name"
        android:textColor="@color/appstartup"
        android:textSize="@dimen/app_name"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/beginners_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/beggin"
        style="@style/item_style"
        android:layout_gravity="center"
        android:clickable="true"
        android:background="@drawable/image"
        android:layout_marginBottom="30dp"
        />

        <Button
            android:id="@+id/intermediate_btn"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="@string/inter"
            style="@style/item_style"
            android:layout_gravity="center"
            android:clickable="true"
            android:background="@drawable/image"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/advanced_btn"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="@string/advance"
            style="@style/item_style"
            android:layout_gravity="center"
            android:clickable="true"
            android:background="@drawable/image"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/expert_btn"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="@string/expert"
            style="@style/item_style"
            android:layout_gravity="center"
            android:clickable="true"
            android:background="@drawable/image"
            android:layout_marginBottom="30dp"
            />

</LinearLayout>
